{
    "manifest_version": 3,
    "name": "YouTube Timeline Selector",
    "version": "1.0",
    "description": "Select a portion of a YouTube video using draggable pointers",
    "permissions": ["activeTab", "downloads"],
    "host_permissions": ["http://localhost:3000/"],
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }